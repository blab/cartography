rule sarscov2_test_replication_plot_cluster_accuracy:
    input:
        accuracies="sars-cov-2-nextstrain-2022-2023/results/replication_analysis_cluster_accuracy.csv",
    output:
        accuracies="manuscript/figures/sarscov2-test-replication-of-cluster-accuracy.png",
    conda: "../cartography.yml"
    notebook:
        "../notebooks/plot-replication-of-cluster-accuracy.py.ipynb"


rule sarscov2_test_get_accessions:
    input:
        metadata="sars-cov-2-nextstrain-2022-2023/data/metadata.tsv",
    output:
        accessions="sars-cov-2-nextstrain-2022-2023/results/accessions.txt",
    conda: "../cartography.yml"
    shell:
        """
        csvtk cut -t -f "genbank_accession_rev" {input.metadata} \
            | sed 1d \
            | sort -k 1,1 > {output}
        """

rule sarscov2_test_get_authors_for_accessions:
    input:
        accessions="sars-cov-2-nextstrain-2022-2023/results/accessions.txt",
    output:
        authors="sars-cov-2-nextstrain-2022-2023/results/accessions_and_authors.tsv",
    params:
        fields="accession,isolate-lineage,submitter-affiliation,submitter-names",
    conda: "../cartography.yml"
    shell:
        """
        datasets summary virus genome accession --as-json-lines --inputfile {input.accessions} \
            | dataformat tsv virus-genome --fields {params.fields} \
            | csvtk rename -t -f "Isolate Lineage" -n "Virus Name" \
            | csvtk mutate2 -t -n "dataset" -e "'sars-cov-2-2022-2023'" > {output.authors}
        """
