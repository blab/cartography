rule sarscov2_test_replication_simplify_metadata:
    input:
        metadata="sars-cov-2-nextstrain-2022-2023/data/filtered_metadata.tsv.zst",
        outliers="sars-cov-2-nextstrain/config/exclude.txt",
    output:
        metadata="sars-cov-2-nextstrain-2022-2023/results/replication_analysis_metadata.tsv",
    params:
        fields="strain,genbank_accession_rev,date,region,Nextstrain_clade",
    log:
        "logs/sars-cov-2-nextstrain-2022-2023/simplify_metadata.txt"
    conda: "../cartography.yml"
    shell:
        """
        zstd -c -d {input.metadata} \
            | csvtk cut -t -f {params.fields} \
            | csvtk grep -t -f strain -P {input.outliers} -v \
            | csvtk mutate -t -f date -n year -p "^(\d{{4}}).*" \
            | csvtk mutate -t -f date -n month -p "^\d{{4}}-(\d{{2}}).*" \
            | csvtk filter2 -t -f '$year>2021' \
            | csvtk filter2 -t -f '$month!=""' > {output.metadata} 2> {log}
        """

rule sarscov2_test_replication_split_metadata:
    input:
        metadata="sars-cov-2-nextstrain-2022-2023/results/replication_analysis_metadata.tsv",
    output:
        metadata_dir=directory("sars-cov-2-nextstrain-2022-2023/results/replication_analysis_split_metadata"),
        metadata_dir_exists="sars-cov-2-nextstrain-2022-2023/results/replication_analysis_split_metadata.txt",
    params:
        fields="region,year,month",
    conda: "../cartography.yml"
    shell:
        """
        csvtk split -t -f {params.fields} -o {output.metadata_dir} {input.metadata} && touch {output.metadata_dir_exists}
        """

rule sarscov2_test_replication_subsample_metadata:
    input:
        metadata="sars-cov-2-nextstrain-2022-2023/results/replication_analysis_metadata.tsv",
        metadata_dir_exists="sars-cov-2-nextstrain-2022-2023/results/replication_analysis_split_metadata.txt",
    output:
        metadata="sars-cov-2-nextstrain-2022-2023/results/replication_analysis/{sequences_per_group}/{replicate}/metadata.tsv",
    params:
        metadata_dir="sars-cov-2-nextstrain-2022-2023/results/replication_analysis_split_metadata",
    conda: "../cartography.yml"
    shell:
        """
        head -n 1 {input.metadata} > {output.metadata}
        for file in {params.metadata_dir}/*.tsv; do tsv-sample -H -n {wildcards.sequences_per_group} -v {wildcards.replicate} "$file" | sed 1d; done >> {output.metadata}
        """

rule sarscov2_test_replication_subsample_strains:
    input:
        metadata="sars-cov-2-nextstrain-2022-2023/results/replication_analysis/{sequences_per_group}/{replicate}/metadata.tsv",
    output:
        strains="sars-cov-2-nextstrain-2022-2023/results/replication_analysis/{sequences_per_group}/{replicate}/strains.txt",
    conda: "../cartography.yml"
    shell:
        """
        csvtk cut -t -f strain {input.metadata} | sed 1d | sort -k 1,1 | uniq > {output.strains}
        """

rule sarscov2_test_replication_subsample_sequences:
    input:
        alignment="sars-cov-2-nextstrain-2022-2023/data/filtered_aligned.fasta.zst",
