rule all:
    input:
        "cartography.pdf",
        #"cartography.html",
        #"total_KDE_table.csv"

rule concat_KDE_tables:
    input:
        Flu_KDE = "../seasonal-flu-nextstrain/results/full_KDE_metadata.csv",
        Zika_KDE = "../zika-nextstrain/results/full_KDE_metadata.csv",
        MERS_KDE = "../mers-nextstrain/results/full_KDE_metadata.csv"
    output:
        fullKDE = "total_KDE_table.csv",
        table = "total_KDE_table.txt"
    params:
        disease_names = "Influenza Zika MERS",
        dataframes = "../seasonal-flu-nextstrain/results/full_KDE_metadata.csv ../zika-nextstrain/results/full_KDE_metadata.csv ../mers-nextstrain/results/full_KDE_metadata.csv"
    conda: "../cartography.yml"
    shell:
        """
        python3 ../notebooks/scripts/concat_KDE_tables.py \
            --tables {params.dataframes} \
            --output-csv {output.fullKDE} \
            --output-table {output.table} \
            --disease-names {params.disease_names}
        """

rule manuscript_pdf:
    input:
        manuscript = "cartography.md",
        csl = "chicago-author-date.csl",
        template = "template.tex",
        disable = "figure_placement.tex"
    output:
        manuscript = "cartography.pdf"
    conda: "../cartography.yml"
    shell:
        """
        pandoc \
            -H  {input.disable} \
            --filter pandoc-crossref \
            --citeproc \
            --bibliography=cartography.bib \
            --csl {input.csl} \
            --template {input.template} \
            -s {input.manuscript} \
            -o {output.manuscript} \
            -V geometry:"top=1in, bottom=1in, left=1in, right=1in"
        """

rule manuscript_html:
    input:
        manuscript = "cartography.md",
        bibliography = "cartography.bib",
        csl = "chicago-author-date.csl",
        template = "pandoc-scholar.html",
        css = "pandoc-scholar.css"
    output:
        manuscript = "cartography.html"
    conda: "../cartography.yml"
    shell:
        """
        pandoc \
            --filter pandoc-crossref \
            --citeproc \
            --bibliography={input.bibliography} \
            --csl {input.csl} \
            --template {input.template} \
            --css {input.css} \
            --from markdown+link_attributes \
            -s {input.manuscript} \
            -o {output.manuscript}
        """


#pandoc --filter pandoc-crossref --citeproc --bibliography=cartography.bib --csl chicago-author-date.csl --template pandoc-scholar.html --css pandoc-scholar.css -s cartography.md -o cartography.html
